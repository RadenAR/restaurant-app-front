{{#each restaurants as |restaurant|}}
  <section data-id="{{restaurant.id}}">
    {{#if restaurant.editable}}
    <h6>Name:</h6>
    <h3 contenteditable='true' class='name'>
      {{restaurant.name}}
    </h3>
    <h6>Address:</h6>
    <p contenteditable='true' class='address'>
      {{restaurant.address}}
    </p>
    <h6>Rating:</h6>
    <p contenteditable='true' class='rating'>
      {{restaurant.rating}}
    </p>
    <h6>Cuisine:</h6>
    <p contenteditable='true' class='cuisine'>
      {{restaurant.cuisine_type}}
    </p>
    <h6>Healthy:</h6>
    <p contenteditable='true' class='healthy'>
      {{restaurant.healthy}}
    </p>
        <btn class='btn btn-danger remove-restaurant' data-id='{{restaurant.id}}'>Remove Restaurant</btn>
        <btn class='btn btn-primary update-restaurant' data-id='{{restaurant.id}}'>Update Restaurant</btn>
      <br>
      <br>
      <br>
      <br>
    {{else}}
    <h6>Name:</h6>
    <h3>
      {{restaurant.name}}
    </h3>
    <h6>Address:</h6>
    <p>
      {{restaurant.address}}
    </p>
    <h6>Rating:</h6>
    <p>
      {{restaurant.rating}}
    </p>
    <h6>Cuisine:</h6>
    <p>
      {{restaurant.cuisine_type}}
    </p>
    <h6>Healthy:</h6>
    <p>
      {{restaurant.healthy}}
    </p>
      <br>
      <br>
      <br>
      <br>
    {{/if}}
  </section>

{{/each}}
